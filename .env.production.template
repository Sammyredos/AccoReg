# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values

# ===== REQUIRED PRODUCTION VARIABLES =====

# Database Configuration (PostgreSQL for production)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Security Keys (Generate strong, unique values)
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long"
NEXTAUTH_SECRET="your-super-secure-nextauth-secret-at-least-32-characters-long"

# Application URL (Your production domain)
NEXTAUTH_URL="https://your-domain.com"

# Super Admin Credentials
SUPER_ADMIN_EMAIL="admin@your-domain.com"
SUPER_ADMIN_PASSWORD="your-super-secure-admin-password"

# ===== EMAIL CONFIGURATION =====

# SMTP Settings (Required for email functionality)
SMTP_HOST="your-smtp-host.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
SMTP_FROM="noreply@your-domain.com"
SMTP_FROM_NAME="Your Organization Name"

# ===== SMS CONFIGURATION (Optional) =====

# Twilio SMS Settings
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# ===== FILE UPLOAD CONFIGURATION =====

# Cloudinary Settings (For file uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ===== OPTIONAL PRODUCTION SETTINGS =====

# Environment
NODE_ENV="production"

# Security
HSTS_ENABLED="true"
SECURE_COOKIES="true"

# Performance
ENABLE_COMPRESSION="true"
CACHE_MAX_AGE="3600"

# Logging
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Session Configuration
SESSION_TIMEOUT="3600000"
SESSION_SECURE="true"

# ===== MONITORING & ANALYTICS =====

# Error Tracking (Optional)
SENTRY_DSN="your-sentry-dsn"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="your-ga-id"

# ===== BACKUP CONFIGURATION =====

# Database Backup (Optional)
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# ===== NOTES =====
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and secrets
# 3. Enable SSL/TLS for all external services
# 4. Regularly rotate secrets and passwords
# 5. Monitor logs for security issues
# 6. Set up proper backup and disaster recovery
