# AccoReg Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
NODE_ENV=production

# Server configuration
PORT=3000

# NextAuth configuration
NEXTAUTH_URL=https://your-app.onrender.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-at-least-32-chars-production

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================

# PostgreSQL connection string from Render
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT secret for token signing (minimum 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-production

# Encryption key for sensitive data
ENCRYPTION_KEY=your-super-secure-encryption-key-at-least-32-characters

# Security headers (enabled for production)
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# =============================================================================
# ADMIN SETUP
# =============================================================================

# Super admin password for initial setup
SUPER_ADMIN_PASSWORD=YourSecureAdminPassword123!

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP settings for production
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# Email branding
EMAIL_FROM_NAME=AccoReg
EMAIL_REPLY_TO=noreply@yourdomain.com

# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin@yourdomain.com

# Email notifications
EMAIL_NOTIFICATIONS_ENABLED=true
SEND_REGISTRATION_EMAILS=true
SEND_ADMIN_NOTIFICATIONS=true

# =============================================================================
# SMS CONFIGURATION (Optional)
# =============================================================================

# SMS settings
SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+1234567890
SMS_REGION=us-east-1

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis URL for rate limiting and caching (optional for production)
REDIS_URL=redis://localhost:6379

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-chars

# =============================================================================
# GDPR COMPLIANCE
# =============================================================================

GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
CONSENT_VERSION=1.0

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=warn
LOG_DIR=./logs

# =============================================================================
# HEALTH CHECKS
# =============================================================================

HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Database connection pool
CONNECTION_POOL_SIZE=15
QUERY_TIMEOUT=30000

# Request limits
MAX_REQUEST_SIZE=10mb
BODY_PARSER_LIMIT=10mb

# Timeouts
HTTP_TIMEOUT=120000
SSE_KEEP_ALIVE_TIMEOUT=65000

# =============================================================================
# REAL-TIME FEATURES
# =============================================================================

REALTIME_ENABLED=true
SSE_HEARTBEAT_INTERVAL=30000
SSE_RECONNECT_INTERVAL=5000
REALTIME_EVENT_TIMEOUT=60000
MAX_SSE_CONNECTIONS=100

# =============================================================================
# QR CODE & ATTENDANCE FEATURES
# =============================================================================

QR_AUTO_CLOSE_ENABLED=true
ATTENDANCE_REALTIME_UPDATES=true
HIDE_QR_FOR_VERIFIED=true
AUTO_REFRESH_ATTENDANCE=true

# =============================================================================
# MOBILE & RESPONSIVE OPTIMIZATIONS
# =============================================================================

MOBILE_OPTIMIZED=true
RESPONSIVE_CHARTS=true
TOUCH_FRIENDLY_UI=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ERROR_REPORTING_ENABLED=true

# =============================================================================
# BUILD OPTIMIZATIONS
# =============================================================================

SKIP_TYPE_CHECK=false
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# =============================================================================
# PRODUCTION NOTES
# =============================================================================

# 1. Replace all placeholder values with your actual production values
# 2. Keep this file secure and never commit it to version control
# 3. Use strong, unique passwords and secrets
# 4. Enable all security features for production
# 5. Configure proper email settings for notifications
# 6. Set up monitoring and logging
# 7. Test all features in a staging environment first
